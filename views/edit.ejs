<%- include('partials/header.ejs') %>

<form class="form" action="/edit/<%= review.id %>" method="POST">
  <input type="hidden" name="id" value="<%= review.id %>">

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= review.title %>" required>

  <label for="author">Author:</label>
  <input type="text" id="author" name="author" value="<%= review.author %>" required>

  <label for="review">Review:</label>
  <textarea id="review" name="review" required><%= review.review %></textarea>

  <label for="date">Date:</label>
  <input type="date" id="date" name="date" value="<%= review.date %>" readonly>

  <label for="rating">Rating:</label>
  <select name="rating" id="rating" required>
    <option value="⭐" <%= review.rating === '⭐' ? 'selected' : '' %>>⭐</option>
    <option value="⭐⭐" <%= review.rating === '⭐⭐' ? 'selected' : '' %>>⭐⭐</option>
    <option value="⭐⭐⭐" <%= review.rating === '⭐⭐⭐' ? 'selected' : '' %>>⭐⭐⭐</option>
    <option value="⭐⭐⭐⭐" <%= review.rating === '⭐⭐⭐⭐' ? 'selected' : '' %>>⭐⭐⭐⭐</option>
    <option value="⭐⭐⭐⭐⭐" <%= review.rating === '⭐⭐⭐⭐⭐' ? 'selected' : '' %>>⭐⭐⭐⭐⭐</option>
  </select>

  <label for="category">Category:</label>
  <select id="category" name="category">
    <option value="fiction" <%= review.category === 'fiction' ? 'selected' : '' %>>Fiction</option>
    <option value="non-fiction" <%= review.category === 'non-fiction' ? 'selected' : '' %>>Non-Fiction</option>
    <option value="romance" <%= review.category === 'romance' ? 'selected' : '' %>>Romance</option>
    <option value="thriller" <%= review.category === 'thriller' ? 'selected' : '' %>>Thriller</option>
    <option value="biography" <%= review.category === 'biography' ? 'selected' : '' %>>Biography</option>
  </select>

  <label for="name">Your Name:</label>
  <input type="text" id="name" name="name" value="<%= review.name %>" required>

  <button type="submit">Update Review</button>
</form>
